<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Inicio del FrameLayout que contiene el CardView -->
    <FrameLayout
        android:layout_width="407dp"
        android:layout_height="113dp"

        android:layout_marginTop="724dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView

            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="24dp"
            android:elevation="50dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollView2">

            <ImageView
                android:id="@+id/button_plat_add"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="30dp"
                android:src="@drawable/icon_plant"></ImageView>

            <ImageView
                android:id="@+id/button_home_view"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:src="@drawable/icon_home"></ImageView>

            <ImageView
                android:id="@+id/button_refresh_view"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_horizontal"
                android:layout_marginStart="30dp"
                android:src="@drawable/icon_refresh"></ImageView>
        </androidx.cardview.widget.CardView>

    </FrameLayout>
    <!-- Fin del FrameLayout que contiene el CardView -->

</androidx.constraintlayout.widget.ConstraintLayout>
